<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <SplitPane prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #122c40;">
            <items>
                <ImageView fitHeight="226.0" fitWidth="198.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Downloads/FFA.png" />
                    </image>
                </ImageView>
            </items>
        </SplitPane>

        <Label layoutX="300.0" layoutY="82.0" text="Se connecter">
            <font><Font size="34.0" /></font>
        </Label>

        <!-- Champ Email -->
        <TextField fx:id="emailField" promptText="Email"
                   layoutX="300.0" layoutY="137.0"
                   prefHeight="36.0" prefWidth="189.0" />

        <!-- Champ Mot de passe -->
        <TextField fx:id="passwordField" promptText="Mot de passe"
                   layoutX="300.0" layoutY="191.0"
                   prefHeight="36.0" prefWidth="189.0" />

        <Label layoutX="306.0" layoutY="245.0" text="Mot de passe oubliÃ© ?" textFill="#7c7c7c">
            <font><Font size="12.0" /></font>
        </Label>

        <Label layoutX="418.0" layoutY="245.0" text="S'inscrire" textFill="#28a3e1">
            <font><Font size="12.0" /></font>
        </Label>

        <!-- Bouton -->
        <Button fx:id="loginButton"
                layoutX="415.0" layoutY="278.0"
                mnemonicParsing="false"
                prefHeight="26.0" prefWidth="82.0"
                style="-fx-background-color: #144396;"
                text="Connexion"
                textFill="WHITE"
                onAction="#handleLogin"/>
    </children>
</AnchorPane>
